<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml" />
    <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml" />
    <StyleInclude Source="avares://Nir/Styles/Button.xaml" />
    <StyleInclude Source="avares://Nir/Styles/ApiKey.xaml" />
    <StyleInclude Source="avares://Nir/Styles/Error.xaml" />
    <StyleInclude Source="avares://Nir.UI/Styles/PageHeader.xaml" />

    <Style Selector="TextBlock.error">
        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource FontSizeLarge}" />
    </Style>

    <Style Selector="TextBlock.h1">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeLarge}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
</Styles>