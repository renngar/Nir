<!-- Copyright (C) 2020 Renngar <renngar@renngar.com> -->
<Styles
    xmlns="https://github.com/avaloniaui">

    <Style Selector="DockPanel.about > StackPanel">
        <Setter Property="DockPanel.Dock" Value="Top" />
        <Setter Property="Width" Value="600" />
    </Style>
    <Style Selector="DockPanel.about > StackPanel.header">
        <Setter Property="Spacing" Value="10" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

    <Style Selector="DockPanel.about Image.icon">
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
    </Style>

    <Style Selector="DockPanel.about TextBox.license">
        <Setter Property="Margin" Value="0,10,0,0" />
    </Style>

    <Style Selector="TextBox.license">
        <!-- Oxygen Mono - Has a couple odd kernings and letterforms -->
        <!-- IBM Plex Mono - A typewriter style -->
        <Setter Property="FontFamily" Value="avares://Nir/Assets/Fonts#Hack" />
    </Style>

    <Style Selector="TabControl.licenses">
        <Setter Property="TabStripPlacement" Value="Left" />
    </Style>
    <Style Selector="TabControl.licenses TextBox.license">
        <Setter Property="Margin" Value="0,10,0,0"></Setter>
    </Style>
</Styles>