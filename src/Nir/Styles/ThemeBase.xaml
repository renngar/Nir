<!-- This is not a standalone style file.  It must be included in a theme after the theme-specific includes -->
<Styles
    xmlns="https://github.com/avaloniaui">

    <StyleInclude Source="avares://Nir/Styles/Button.xaml" />
    <StyleInclude Source="avares://Nir/Styles/ApiKey.xaml" />
    <StyleInclude Source="avares://Nir/Styles/Error.xaml" />
    <StyleInclude Source="avares://Nir/Styles/PageHeader.xaml" />

    <Style Selector="TextBlock.error">
        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource FontSizeLarge}" />
    </Style>

    <Style Selector="TextBlock.h1">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeLarge}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style Selector="TextBlock.link">
        <Setter Property="Foreground" Value="{DynamicResource ThemeAccentBrush}" />
    </Style>
    <Style Selector="TextBlock.link:pointerover">
        <Setter Property="Foreground" Value="{DynamicResource ThemeAccentBrush2}" />
    </Style>
</Styles>
